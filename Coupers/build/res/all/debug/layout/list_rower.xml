<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector"
                android:orientation="horizontal" >

    <ImageView
            android:id="@+id/list_image"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:src="@drawable/muelle240"
            android:scaleType="centerCrop"/>

    <!-- Location Name -->
    <TextView
            android:id="@+id/location_name"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="Muelle 240"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/list_image"
            android:singleLine="false"/>

    <ImageView
            android:id="@+id/dashdeal"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:src="@drawable/dashline2"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/location_name"
            android:layout_alignParentStart="false"/>

    <!-- Rightend Deal -->
    <TextView
            android:id="@+id/deal_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="20% off"
            android:textSize="25dip"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dip"
            android:singleLine="false"
            android:layout_toRightOf="@+id/dashdeal"/>

    <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/location_name"
            android:layout_alignBottom="@+id/list_image"
            android:layout_alignParentTop="true"/>

</RelativeLayout>