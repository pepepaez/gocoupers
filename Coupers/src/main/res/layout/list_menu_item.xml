<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="false">

    <ImageView
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:id="@+id/selected_indicator"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="#000100"
            android:layout_above="@+id/item_menu_icon"
            android:layout_alignBottom="@+id/item_menu_icon"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_menu_icon"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/selected_indicator"
            android:src="@drawable/logo_icon1"
            android:scaleType="fitCenter"
            android:padding="12dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/item_menu_text"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_menu_icon"
            android:layout_alignBottom="@+id/item_menu_icon"
            android:layout_alignParentRight="true"
            android:paddingLeft="4dp"
            android:clickable="false"
            />

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView"
            android:background="#dee0e2"
            android:layout_alignBottom="@+id/item_menu_icon"
            android:layout_toRightOf="@+id/selected_indicator"/>

</RelativeLayout>