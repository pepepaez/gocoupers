<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnOrderPreserved="false"
        android:clickable="false">

    <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="20% off"
            android:id="@+id/level_deal_legend"
            android:layout_alignParentTop="true"
            android:background="#e75e57"
            android:textAlignment="gravity"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
        android:textStyle="bold"
        android:padding="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deal_space"
        android:layout_alignLeft="@+id/deal_description"
        android:layout_alignRight="@+id/deal_description"
        android:background="#ffffff"
        android:layout_below="@+id/level_deal_legend"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/qrcode_share"
        android:layout_marginBottom="-10dp" />

    <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="En Cafe Americano"
            android:id="@+id/level_deal_description"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/level_deal_legend"
            android:background="#e75e57"
            android:layout_alignBottom="@+id/level_deal_legend"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="10dp"
            android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:textStyle="italic"
        android:padding="4dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lorem_ipsum"
            android:id="@+id/deal_description"
        android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/level_deal_legend"
        android:layout_marginTop="3dp" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/level_redeem_code"
            android:src="@drawable/barcode"
        android:scaleType="center"
        android:layout_below="@+id/deal_description"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/deal_space"
        android:layout_alignLeft="@+id/deal_space"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/level_redeem_code_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@+id/level_redeem_code"
        android:background="#ffffff"
        android:textSize="15dp" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:id="@+id/deal_level_indicator"
        android:layout_centerHorizontal="true"
        android:src="@drawable/deal_level_1"
        android:layout_below="@+id/level_redeem_code_text"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/save_deal"
        android:src="@drawable/save_deal"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/qrcode_share"
        android:layout_alignTop="@+id/qrcode_share"
        android:layout_alignBottom="@+id/qrcode_share" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/qrcode_share"
        android:src="@drawable/share_qr"
        android:background="#ffffff"
        android:layout_below="@+id/deal_level_indicator"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/facebook_share"
        android:src="@drawable/share_facebook"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@+id/qrcode_share"
        android:layout_alignTop="@+id/qrcode_share"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/qrcode_share" />

</RelativeLayout>

