<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/grid_padding">

    <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightpadding"
            android:background="@drawable/grid_padding"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/multiple_deal_indicator"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/multiple_deal_indicator"
            android:background="@drawable/multiple_deals_row_background"
            android:layout_toRightOf="@+id/leftpadding"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/background"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/leftpadding"
            android:layout_alignBottom="@+id/list_image"
            android:layout_alignRight="@+id/deal_tip"
            android:background="@drawable/multiple_deals_row_background"/>

    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarThumb"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/logo_image"
            android:layout_alignBottom="@+id/list_image"
            android:layout_toRightOf="@+id/leftpadding"/>

    <ImageView
            android:id="@+id/list_image"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/leftpadding"
            android:padding="3dp"/>

    <!-- Location Name -->

    <ImageView
            android:id="@+id/logo_image"
            android:layout_width="180dip"
            android:layout_height="90dip"
            android:scaleType="center"
            android:layout_toRightOf="@+id/list_image"/>


    <ImageView
            android:id="@+id/dashdeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dashline2"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/logo_image"
            android:layout_alignParentStart="false"
            android:layout_alignBottom="@+id/deal_tip"/>

    <!-- Rightend Deal -->
    <TextView
            android:id="@+id/deal_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="20% off"
            android:textSize="20dip"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_toRightOf="@+id/dashdeal"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/logo_image"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_toLeftOf="@+id/rightpadding"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/deal_id"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"/>
    <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/leftpadding"
            android:layout_alignParentTop="true"
            android:background="@drawable/grid_padding"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/multiple_deal_indicator"/>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLogo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>