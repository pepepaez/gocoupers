<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coupers.coupers"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--<activity
                android:name="com.coupers.coupers.MenuActivity"
                android:label="@string/app_name" >
        </activity>-->
        <activity
            android:screenOrientation="portrait"
            android:name="com.coupers.coupers.MainActivity"

            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name="ResponsiveUIActivity"
                android:parentActivityName="com.coupers.coupers.MainActivity" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.coupers.coupers.MainActivity" />

        </activity>
        <activity
                android:name=".DealActivity"
                android:theme="@style/AppTheme" />

        <activity
                  android:screenOrientation="portrait"
                  android:name="CardFlipActivity"
                  android:label="@string/app_name"
                  android:parentActivityName="ResponsiveUIActivity"
                  android:theme="@style/AppTheme">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="ResponsiveUIActivity" />
        </activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

</manifest>
